<!doctype html>
<html lang="en">
    <head>
        <title>Password Reset</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/css/base.css" />
        <link rel="stylesheet" href="/css/resetPassword.css" />
    </head>
    <body>
        <main>
            <h1>Password Reset</h1>
            <p>Enter your new password below</p>
            <form action="/reset-password/<%= token %>" method="post" id="password-form">
                <div>
                    <img src="/assets/password-icon.svg" alt="password icon" />
                    <input type="password" id="password" name="password" placeholder="password" id="password" />
                </div>
                <span id="password-validation-message">test</span>
                <button type="submit">Reset Password</button>
            </form>
        </main>
        <script src="/js/validatePassword.js"></script>
    </body>
</html>
