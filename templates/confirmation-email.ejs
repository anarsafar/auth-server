<!doctype html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <style>
            body {
                font-family: Arial, sans-serif;
                background-color: #f5f5f5;
                margin: 0;
                padding: 0;
            }
            .container {
                max-width: 600px;
                margin: 0 auto;
                padding: 20px;
                background-color: #ffffff;
                border-radius: 10px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            }
            .header {
                text-align: center;
                margin-bottom: 20px;
            }
            .title {
                color: #333333;
                font-size: 24px;
                font-weight: bold;
                margin: 0;
            }
            .message {
                color: #666666;
                font-size: 16px;
                margin: 0;
                margin-top: 10px;
            }
            .cta-button {
                display: inline-block;
                padding: 10px 20px;
                background-color: #007bff;
                color: #ffffff !important;
                text-decoration: none;
                border-radius: 5px;
                margin-top: 20px;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <div class="header">
                <h1 class="title">Confirm Your Email</h1>
                <p class="message">Click the button below to confirm your email:</p>
                <a class="cta-button" href="<%= link %>"><%= ctaText %></a>
            </div>
        </div>
    </body>
</html>
